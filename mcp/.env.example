# MCP Bookkeeping Server Environment Configuration
# Copy this file to .env and update with your settings

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bookkeeping
DB_USER=bookkeeper
DB_PASSWORD=your_secure_password_here

# MCP Server Configuration
MCP_SERVER_NAME=bookkeeping-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=AI Bookkeeping MCP Server with PostgreSQL Backend

# Server Settings
DEBUG=false
LOG_LEVEL=INFO

# Feature Flags
ENABLE_AI_CATEGORIZATION=true
ENABLE_DUPLICATE_DETECTION=true

# AI Service Configuration (if using external AI for categorization)
# OPENAI_API_KEY=your_openai_api_key_here
# AI_MODEL=gpt-4