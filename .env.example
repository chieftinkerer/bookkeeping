# AI Bookkeeping Database Configuration
# Copy this to .env and update with your settings

# PostgreSQL Connection Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bookkeeping
POSTGRES_USER=bookkeeper
POSTGRES_PASSWORD=password
POSTGRES_SSLMODE=prefer

# OpenAI API Configuration (for AI categorization)
OPENAI_API_KEY=your_openai_api_key_here

# Data Paths (optional overrides for config.py)
BOOKKEEPING_CSV_PATH=/path/to/csv/files
BOOKKEEPING_EXCEL_PATH=/path/to/existing/excel/file.xlsx

# Development and Logging Settings
DEBUG=false
LOG_LEVEL=INFO

# MCP Server Configuration
MCP_SERVER_NAME=ai-bookkeeping
MCP_SERVER_VERSION=1.0.0

# Optional: Database Performance Settings
DB_CONNECTION_POOL_MIN=1
DB_CONNECTION_POOL_MAX=10
DB_QUERY_TIMEOUT=30

# Optional: AI Processing Settings  
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=60
DEFAULT_BATCH_SIZE=50

# Optional: Duplicate Detection Settings
DUPLICATE_DAYS_RANGE=7
DUPLICATE_AMOUNT_TOLERANCE=0.0